# ================================
# Environment Variables for gavra_android
# ================================
# Copy this file to .env and fill in your credentials
# NEVER commit the actual .env file to version control!

# --------------------------------
# Supabase
# --------------------------------
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key   # Only use this in trusted servers/CI

# --------------------------------
# Huawei AppGallery Connect
# --------------------------------
# Get these from: AppGallery Connect Console > Users and permissions > Connect API
HUAWEI_CLIENT_ID=your-huawei-client-id
HUAWEI_CLIENT_SECRET=your-huawei-client-secret
HUAWEI_APP_ID=your-app-id

# --------------------------------
# Google Play Console
# --------------------------------
# Create a service account in Google Cloud Console with Android Publisher API access
# Download the JSON key file and paste its contents here (as a single line JSON string)
GOOGLE_PLAY_PACKAGE_NAME=com.example.yourapp
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# --------------------------------
# App Store Connect
# --------------------------------
# Get these from: App Store Connect > Users and Access > Keys > App Store Connect API
APP_STORE_ISSUER_ID=your-issuer-id
APP_STORE_KEY_ID=your-key-id
APP_STORE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----
APP_STORE_APP_ID=your-app-id
APP_STORE_BUNDLE_ID=com.example.yourapp
