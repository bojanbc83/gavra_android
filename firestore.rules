rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // 🔐 AUTHENTICATED USERS ONLY - Firebase Auth Required
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // 🚛 VOZAČI - Only authenticated drivers can access
    match /vozaci/{vozacId} {
      allow read, write: if request.auth != null && request.auth.token.email != null;
    }
    
    // 🚌 PUTNICI - Authenticated access
    match /putnici/{putnikId} {
      allow read, write: if request.auth != null;
    }
    
    // 📍 GPS LOKACIJE - Authenticated access  
    match /gps_lokacije/{lokacijaId} {
      allow read, write: if request.auth != null;
    }
    
    // 🛣️ RUTE - Authenticated access
    match /rute/{rutaId} {
      allow read, write: if request.auth != null;
    }
  }
}
