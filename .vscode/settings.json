{
  "files.associations": {
    "**/migrations/*.sql": "postgres"
  },
  "deno.enablePaths": [
    "supabase/functions"
  ],
  "deno.lint": true,
  "deno.unstable": [
    "bare-node-builtins",
    "byonm",
    "sloppy-imports",
    "unsafe-proto",
    "webgpu",
    "broadcast-channel",
    "worker-options",
    "cron",
    "kv",
    "ffi",
    "fs",
    "http",
    "net"
  ],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Dart & Flutter auto-fix settings
  "dart.enableSdkFormatter": true,
  "dart.lineLength": 120,
  "dart.insertArgumentPlaceholders": false,
  
  // Auto-fix on save
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  
  // Real-time linting
  "dart.showLintNames": true,
  "dart.showTodos": true,
  "dart.previewLsp": true,
  
  // Auto trailing commas for Dart
  "dart.automaticCommaInsertion": true,
  
  // Format settings for Dart
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80, 120],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    }
  },
  
  // SQLTools Database Connections
  "sqltools.connections": [
    {
      "name": "Gavra Supabase Local",
      "driver": "PostgreSQL",
      "previewLimit": 50,
      "server": "localhost",
      "port": 5432,
      "database": "postgres",
      "username": "postgres",
      "password": "postgres",
      "pgOptions": {
        "ssl": false
      },
      "connectionTimeout": 15000,
      "group": "Local"
    },
    {
      "name": "Gavra Supabase Cloud",
      "driver": "PostgreSQL",
      "previewLimit": 50,
      "server": "db.gjtabtwudbrmfeyjiicu.supabase.co",
      "port": 6543,
      "database": "postgres",
      "username": "postgres.gjtabtwudbrmfeyjiicu",
      "password": "FlqfvHczUpSytgrV",
      "pgOptions": {
        "ssl": {
          "rejectUnauthorized": false
        }
      },
      "connectionTimeout": 15000,
      "group": "Cloud"
    }
  ],
  "sqltools.useNodeRuntime": true,
  "sqltools.format": {
    "language": "sql"
  }
  
  // WakaTime Configuration - API key removed for security
  // Add your personal WakaTime API key here locally
}
