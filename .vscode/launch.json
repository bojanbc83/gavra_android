{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Mode",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--dart-define=DEBUG=true"],
      "console": "debugConsole",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Release Mode", 
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "flutterMode": "release",
      "console": "debugConsole",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Profile Mode",
      "request": "launch", 
      "type": "dart",
      "program": "lib/main.dart",
      "flutterMode": "profile",
      "console": "debugConsole",
      "cwd": "${workspaceFolder}"
    }
  ]
}