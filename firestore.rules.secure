rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ğŸ‘¥ PUTNICI - ÄŒitanje dozvoljeno, pisanje ograniÄeno
    match /putnici/{putnikId} {
      allow read: if true;
      allow write: if isAuthenticated() && isAuthorizedDriver();
    }
    
    // ğŸ“… DNEVNI PUTNICI - ÄŒitanje dozvoljeno, pisanje ograniÄeno
    match /dnevni_putnici/{putnikId} {
      allow read: if true;
      allow write: if isAuthenticated() && isAuthorizedDriver();
    }
    
    // ğŸš— VOZAÄŒI - Samo ovlaÅ¡Ä‡eni pristup
    match /vozaci/{vozacId} {
      allow read, write: if isAuthenticated() && (
        isAdmin() || 
        resource.data.id == request.auth.uid
      );
    }
    
    // ğŸ“Š GPS LOKACIJE - ÄŒitanje admin, pisanje vozaÄi
    match /gps_lokacije/{lokacijaId} {
      allow read: if isAuthenticated() && isAdmin();
      allow write: if isAuthenticated() && isAuthorizedDriver();
    }
    
    // ğŸ¢ ADMIN kolekcije - Samo admin
    match /admin/{document=**} {
      allow read, write: if isAuthenticated() && isAdmin();
    }
    
    // ğŸš« OSTALO - Zabranjeno
    match /{document=**} {
      allow read, write: if false;
    }
    
    // ğŸ” HELPER FUNKCIJE
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    function isAuthorizedDriver() {
      return request.auth.token.driver == true || isAdmin();
    }
  }
}