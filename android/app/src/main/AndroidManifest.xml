    <meta-data android:name="flutterEmbedding" android:value="2" />

    <!-- 🛰️ BACKGROUND GPS SERVICE -->
    <service android:name="id.flutter.flutter_background_service.BackgroundService" android:exported="false" android:foregroundServiceType="location" tools:replace="android:exported" />

