<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Night theme for Android 15 (SDK 35) and above with proper Edge-to-Edge support -->
    <!-- Edge-to-edge is enforced by default in SDK 35, no opt-out needed -->
    <!-- statusBarColor and navigationBarColor are deprecated and ignored in SDK 35 -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- ALWAYS is required for non-floating windows in Android 15 -->
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>
    
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <!-- ALWAYS is required for non-floating windows in Android 15 -->
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>
</resources>
