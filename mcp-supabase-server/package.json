{
    "name": "gavra-mcp-supabase-server",
    "version": "1.0.0",
    "description": "MCP Server for Gavra Android Supabase integration",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "official:install": "pnpm --prefix ../supabase-mcp-official install",
        "official:build": "pnpm --prefix ../supabase-mcp-official build",
        "official:dev": "pnpm --prefix ../supabase-mcp-official --filter @supabase/mcp-server-supabase dev",
        "official:run": "powershell -NoProfile -ExecutionPolicy Bypass -File ../scripts/run-official-mcp.ps1"
    },
    "dependencies": {
        "@supabase/supabase-js": "^2.45.4",
        "@modelcontextprotocol/sdk": "^1.0.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18"
    }
}